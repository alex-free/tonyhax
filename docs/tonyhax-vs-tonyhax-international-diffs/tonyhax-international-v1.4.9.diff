+			number_of_gameshark_code_lines = user_start[mc_base + 1];
+			debug_write("%d code lines detected", number_of_gameshark_code_lines);
+
+			uint8_t sum;
+			uint8_t prev = 0;
+			uint8_t next;
+			uint8_t checksum_in_save_file = user_start[mc_base];
