+	*/
+
+	for(int i = 0; i < number_of_gameshark_code_lines; i++) {
+		
+		gs_code_type = user_start[mc_base + 5];
+			
+		if(
+			(gs_code_type == 0xD0) || 
+			(gs_code_type == 0xD1) || 
+			(gs_code_type == 0xD2) || 
+			(gs_code_type == 0xD3) || 
+			(gs_code_type == 0xE0) || 
+			(gs_code_type == 0xE1) ||
+			(gs_code_type == 0xE2) || 
+			(gs_code_type == 0xE3) || 
+			(gs_code_type == 0x30)
